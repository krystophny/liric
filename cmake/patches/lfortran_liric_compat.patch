+            NAMES LLVM-C libLLVM-C LLVM
+            PATHS ${LLVM_LIBRARY_DIRS})
+        set(CMAKE_FIND_LIBRARY_SUFFIXES "${_lfortran_liric_saved_suffixes}")
+        if (_lfortran_liric_llvm_c_lib)
+            set(_lfortran_liric_llvm_libs "${_lfortran_liric_llvm_c_lib}")
